<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ActivityBackGroundColors"
    tools:context="com.example.luispaulo.ibeacons.Activities.CadastroConta_Informacoes">

    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="511dp">

        <ImageView
            android:id="@+id/img_icUserCadastro"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintDimensionRatio="16:9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_user_cadastro" />

        <EditText
            android:id="@+id/txtCadastroNome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:ems="10"
            android:inputType="textCapSentences"
            android:maxLength="40"
            android:nextFocusDown="@id/txtCadastroSobrenome"
            android:textAlignment="textEnd"
            android:textColor="@color/LineShapes"
            android:textSize="16sp"
            android:theme="@style/LineShapeColors"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/lblCadastroNome" />

        <TextView
            android:id="@+id/lblCadastroNome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="40dp"
            android:text="@string/lblCadastroNome"
            android:textColor="@color/LabelsColor"
            android:textSize="16sp"
            android:typeface="sans"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_icUserCadastro" />

        <TextView
            android:id="@+id/lblCadastroSobrenome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="@string/lblCadastroSobrenome"
            android:textColor="@color/LabelsColor"
            android:textSize="16sp"
            android:typeface="sans"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtCadastroNome" />

        <EditText
            android:id="@+id/txtCadastroSobrenome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:ems="10"
            android:inputType="textCapSentences"
            android:maxLength="40"
            android:nextFocusDown="@id/txtCadastroData"
            android:textAlignment="textEnd"
            android:textColor="@color/LineShapes"
            android:textSize="16sp"
            android:theme="@style/LineShapeColors"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/lblCadastroSobrenome" />

        <EditText
            android:id="@+id/txtCadastroData"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:layout_weight="1"
            android:ems="10"
            android:hint="@string/hintCadastroData"
            android:inputType="date"
            android:nextFocusDown="@id/txtCadastroCPF"
            android:textColor="@color/LineShapes"
            android:textSize="16sp"
            android:theme="@style/LineShapeColors"
            app:layout_constraintEnd_toStartOf="@+id/guideline3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtCadastroSobrenome" />

        <EditText
            android:id="@+id/txtCadastroCPF"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:ems="10"
            android:hint="@string/hintCadastroCPF"
            android:inputType="number"
            android:nextFocusDown="@id/txtCadastroTelefone"
            android:textColor="@color/LineShapes"
            android:textSize="16sp"
            android:theme="@style/LineShapeColors"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline3"
            app:layout_constraintTop_toBottomOf="@+id/txtCadastroSobrenome" />

        <TextView
            android:id="@+id/lblCadastroTelefone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/lblCadastroTelefone"
            android:textColor="@color/LabelsColor"
            android:textSize="16sp"
            android:typeface="sans"
            app:layout_constraintStart_toStartOf="@+id/guideline3"
            app:layout_constraintTop_toBottomOf="@+id/txtCadastroCPF" />

        <EditText
            android:id="@+id/txtCadastroTelefone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:ems="10"
            android:inputType="phone"
            android:textAlignment="textEnd"
            android:textColor="@color/LineShapes"
            android:textSize="16sp"
            android:theme="@style/LineShapeColors"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline3"
            app:layout_constraintTop_toTopOf="@+id/lblCadastroTelefone" />

        <TextView
            android:id="@+id/lblCadastroEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:text="@string/lblCadastroEmail"
            android:textColor="@color/LabelsColor"
            android:textSize="16sp"
            android:typeface="sans"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtCadastroTelefone" />

        <EditText
            android:id="@+id/txtCadastroEmail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:maxLength="50"
            android:textAlignment="textEnd"
            android:textColor="@color/LineShapes"
            android:textSize="16sp"
            android:theme="@style/LineShapeColors"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/lblCadastroEmail" />

        <Button
            android:id="@+id/btnCadastrar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/botao_borderradius"
            android:text="@string/btnCadastrar"
            android:textColor="@color/LabelsColor"
            android:textSize="14sp"
            android:typeface="sans"
            app:layout_constraintEnd_toEndOf="@+id/txtCadastroEmail"
            app:layout_constraintTop_toBottomOf="@+id/txtCadastroEmail" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

    </android.support.constraint.ConstraintLayout>

</ScrollView>
